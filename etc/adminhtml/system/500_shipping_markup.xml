<?xml version="1.0" ?>
<!-- This is a template for configurations used in the Rate processors, see Dhl\ShippingCore\Model\Config\RateConfigInterface and usages
 you can either directly include this file or copy it into your module for adjustments -->
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="shipping_markup" translate="label" sortOrder="500" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Shipping Markup</label>

        <!-- International rates calculation config fields -->
        <field id="international_affect_rates" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="10"
               translate="label button_label" type="Netresearch\ConfigFields\Model\Type\Checkbox">
            <label>International Shipping</label>
            <button_label>Add markup to shipping price</button_label>
        </field>
        <group id="international_affect_rates_group" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="20"
               translate="label">
            <fieldset_css>simple</fieldset_css>
            <attribute type="expanded">1</attribute>
            <depends>
                <field id="international_affect_rates">1</field>
            </depends>
            <label>International shipping price markup</label>

            <field id="international_handling_type" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="10"
                   translate="label" type="Netresearch\ConfigFields\Model\Type\Radioset">
                <label>Calculate Markup</label>
                <source_model>Magento\Shipping\Model\Source\HandlingType</source_model>
            </field>
            <field id="international_handling_fee_fixed" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="20"
                   translate="label comment" type="text">
                <label>Fixed amount</label>
                <validate>validate-number</validate>
                <comment>Enter the markup amount in the currency of your store. Enter a negative to apply a discount</comment>
                <depends>
                    <field id="international_handling_type">F</field>
                </depends>
            </field>
            <field id="international_handling_fee_percentage" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="30"
                   translate="label comment" type="text">
                <label>Percentage</label>
                <validate>validate-number</validate>
                <comment>For example, enter 20 to apply a 20% markup in the currency of your store. Enter -20 to apply a 20% discount</comment>
                <depends>
                    <field id="international_handling_type">P</field>
                </depends>
            </field>
        </group>

        <!-- Domestic rates calculation config fields -->
        <field id="domestic_affect_rates" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="30"
               translate="label button_label" type="Netresearch\ConfigFields\Model\Type\Checkbox">
            <label>Domestic Shipping</label>
            <button_label>Add markup to shipping price</button_label>
        </field>
        <group id="domestic_affect_rates_group" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="40"
               translate="label">
            <fieldset_css>simple</fieldset_css>
            <attribute type="expanded">1</attribute>
            <depends>
                <field id="domestic_affect_rates">1</field>
            </depends>
            <label>Domestic shipping price markup</label>

            <field id="domestic_handling_type" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="10"
                   translate="label" type="Netresearch\ConfigFields\Model\Type\Radioset">
                <label>Calculate Markup</label>
                <source_model>Magento\Shipping\Model\Source\HandlingType</source_model>
                <depends>
                    <field id="domestic_affect_rates">1</field>
                </depends>
            </field>
            <field id="domestic_handling_fee_fixed" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="20"
                   translate="label comment" type="text">
                <label>Fixed amount</label>
                <validate>validate-number</validate>
                <comment>Enter the markup amount in the currency of your store. Enter a negative to apply a discount</comment>
                <depends>
                    <field id="domestic_handling_type">F</field>
                </depends>
            </field>
            <field id="domestic_handling_fee_percentage" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="30"
                   translate="label comment" type="text">
                <label>Percentage</label>
                <validate>validate-number</validate>
                <comment>For example, enter 20 to apply a 20% markup in the currency of your store. Enter -20 to apply a 20% discount</comment>
                <depends>
                    <field id="domestic_handling_type">P</field>
                </depends>
            </field>
        </group>
    </group>
</include>

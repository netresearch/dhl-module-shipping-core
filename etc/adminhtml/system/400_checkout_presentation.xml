<?xml version="1.0" ?>
<!-- This is a template for configurations used in the Rate processors, see Dhl\ShippingCore\Model\Config\RateConfigInterface and usages
 you can either directly include this file or copy it into your module for adjustments -->
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="checkout_settings" translate="label" sortOrder="400" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Checkout Presentation</label>

        <!-- Round prices -->
        <field id="round_prices_format" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="70"
               translate="label" type="Netresearch\ConfigFields\Model\Type\Radioset">
            <label>Round Prices</label>
            <source_model>Dhl\ShippingCore\Model\Config\Source\RoundingFormat</source_model>
        </field>
        <field id="round_prices_mode" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="80"
               translate="label" type="Netresearch\ConfigFields\Model\Type\Radioset">
            <label>Rounding Direction</label>
            <source_model>Dhl\ShippingCore\Model\Config\Source\RoundingDirection</source_model>
            <depends>
                <field id="round_prices_format" separator=",">full_price,static_decimal</field>
            </depends>
        </field>
        <field id="round_prices_static_decimal" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="90"
               translate="label tooltip" type="text">
            <label>Decimal Value</label>
            <validate>validate-length maximum-length-2 minimum-length-2 validate-digits</validate>
            <tooltip>Enter the value without the decimal separator (ex. 99 for the shipping charges to be rounded to 99 cents)</tooltip>
            <depends>
                <field id="round_prices_format">static_decimal</field>
            </depends>
        </field>
    </group>
</include>

<?xml version="1.0" ?>
<!-- This is a template for configurations used in the Rate processors, see Dhl\ShippingCore\Model\Config\RateConfigInterface and usages
 you can either directly include this file or copy it into your module for adjustments -->
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="free_shipping_settings" translate="label" sortOrder="600" showInDefault="1" showInWebsite="1" showInStore="1">
        <label><![CDATA[Free Shipping]]></label>
        <attribute type="expanded">1</attribute>

        <field id="free_shipping_virtual_products_enable" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="10"
               translate="tooltip label comment" type="Dhl\ShippingCore\Model\Data\Form\Element\Checkbox">
            <label><![CDATA[Free Shipping Calculation]]></label>
            <button_label>Include virtual products in totals</button_label>
        </field>

        <!-- International free shipping config fields -->
        <field id="international_free_shipping_enable" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="20"
               translate="label" type="Dhl\ShippingCore\Model\Data\Form\Element\Checkbox">
            <label><![CDATA[International Orders]]></label>
            <button_label>Configure free shipping for international orders</button_label>
            <attribute type="shared">1</attribute>
        </field>
        <field id="international_free_shipping_products" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="30"
               translate="tooltip label comment" type="Dhl\ShippingCore\Model\Data\Form\Element\Checkboxset">
            <label><![CDATA[Free Shipping Available For]]></label>
            <comment><![CDATA[Choose allowed shipping products for Free Shipping]]></comment>
            <depends>
                <field id="international_free_shipping_enable">1</field>
            </depends>
        </field>
        <field id="international_free_shipping_subtotal" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="40"
               translate="tooltip label comment" type="text">
            <label><![CDATA[International Minimum Order Amount]]></label>
            <validate>validate-number validate-zero-or-greater</validate>
            <depends>
                <field id="international_free_shipping_enable">1</field>
            </depends>
        </field>

        <!-- Domestic free shipping config fields -->
        <field id="domestic_free_shipping_enable" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="50"
               translate="label" type="Dhl\ShippingCore\Model\Data\Form\Element\Checkbox">
            <label><![CDATA[Domestic Orders]]></label>
            <button_label>Configure free shipping for domestic orders</button_label>
            <attribute type="shared">1</attribute>
        </field>
        <field id="domestic_free_shipping_products" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="60"
               translate="tooltip label comment" type="Dhl\ShippingCore\Model\Data\Form\Element\Checkboxset">
            <label><![CDATA[Free Shipping Available For]]></label>
            <depends>
                <field id="domestic_free_shipping_enable">1</field>
            </depends>
            <comment><![CDATA[Choose allowed shipping products for Free Shipping]]></comment>
        </field>
        <field id="domestic_free_shipping_subtotal" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="70"
               translate="tooltip label comment" type="text">
            <label><![CDATA[Domestic Minimum Order Amount]]></label>
            <validate>validate-number validate-zero-or-greater</validate>
            <depends>
                <field id="domestic_free_shipping_enable">1</field>
            </depends>
        </field>
    </group>
</include>

<?xml version="1.0" ?>
<carriers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Dhl_ShippingCore/etc/shipping_options.xsd">
    <carrier code="base">
        <packageOptions>
            <shippingOption code="packageDetails">
                <label>Package Details</label>
                <inputs>
                    <input code="productCode">
                        <label>Shipping Product</label>
                        <inputType>radioset</inputType>
                    </input>
                    <input code="weight">
                        <label>Total Weight</label>
                        <inputType>prefixed</inputType>
                        <validationRules>
                            <rule name="validate-number"/>
                            <rule name="validate-greater-than-zero"/>
                        </validationRules>
                        <itemCombinationRule>
                            <sourceItemInputCode>details.weight</sourceItemInputCode>
                            <action>add</action>
                        </itemCombinationRule>
                    </input>
                    <input code="weightUnit">
                        <inputType>hidden</inputType>
                    </input>
                    <input code="width">
                        <label>Width</label>
                        <inputType>prefixed</inputType>
                        <validationRules>
                            <rule name="validate-number"/>
                        </validationRules>
                    </input>
                    <input code="height">
                        <label>Height</label>
                        <inputType>prefixed</inputType>
                        <validationRules>
                            <rule name="validate-number"/>
                        </validationRules>
                    </input>
                    <input code="length">
                        <label>Length</label>
                        <inputType>prefixed</inputType>
                        <validationRules>
                            <rule name="validate-number"/>
                        </validationRules>
                    </input>
                    <input code="sizeUnit">
                        <inputType>hidden</inputType>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption code="packageCustoms">
                <label>Customs Data</label>
                <routes>
                    <route>
                        <excludeDestinations>
                            <destination>domestic</destination>
                        </excludeDestinations>
                    </route>
                </routes>
                <inputs>
                    <input code="customsValue">
                        <label>Customs Value</label>
                        <inputType>prefixed</inputType>
                        <validationRules>
                            <rule name="validate-number"/>
                        </validationRules>
                        <itemCombinationRule>
                            <sourceItemInputCode>itemCustoms.customsValue</sourceItemInputCode>
                            <action>add</action>
                        </itemCombinationRule>
                    </input>
                    <input code="exportDescription">
                        <sortOrder>1000</sortOrder>
                        <label>Package Description</label>
                        <inputType>textarea</inputType>
                        <itemCombinationRule>
                            <sourceItemInputCode>itemCustoms.exportDescription</sourceItemInputCode>
                            <action>concat</action>
                        </itemCombinationRule>
                    </input>
                    <input code="termsOfTrade" defaultConfigValue="dhlshippingsolutions/dhlglobalwebservices/shipment_defaults/terms_of_trade">
                        <label>Terms of Trade</label>
                        <inputType>select</inputType>
                    </input>
                    <input code="contentType" defaultConfigValue="dhlshippingsolutions/dhlglobalwebservices/shipment_defaults/export_content_type">
                        <label>Export Content Type</label>
                        <inputType>select</inputType>
                    </input>
                    <input code="explanation" defaultConfigValue="dhlshippingsolutions/dhlglobalwebservices/shipment_defaults/export_content_explanation">
                        <label>Export Content Explanation</label>
                        <inputType>text</inputType>
                        <validationRules>
                            <rule name="required"/>
                        </validationRules>
                    </input>
                </inputs>
            </shippingOption>
        </packageOptions>
        <itemOptions>
            <itemShippingOptions itemId="0">
                <shippingOptions>
                    <shippingOption code="details">
                        <label>Item Details</label>
                        <inputs>
                            <input code="productId">
                                <inputType>hidden</inputType>
                            </input>
                            <input code="productName">
                                <inputType>hidden</inputType>
                            </input>
                            <input code="price">
                                <inputType>hidden</inputType>
                            </input>
                            <input code="qtyToShip">
                                <sortOrder>10</sortOrder>
                                <label>Quantity to Ship</label>
                                <inputType>static</inputType>
                                <disabled>true</disabled>
                            </input>
                            <input code="qty">
                                <sortOrder>20</sortOrder>
                                <label>Quantity</label>
                                <inputType>select</inputType>
                                <options>
                                    <option>
                                        <label>0</label>
                                        <value>0</value>
                                    </option>
                                    <option>
                                        <label>1</label>
                                        <value>1</value>
                                    </option>
                                </options>
                                <validationRules>
                                    <rule name="validate-number"/>
                                </validationRules>
                            </input>
                            <input code="weight">
                                <sortOrder>30</sortOrder>
                                <label>Weight</label>
                                <inputType>prefixed</inputType>
                                <validationRules>
                                    <rule name="validate-number"/>
                                </validationRules>
                            </input>
                        </inputs>
                    </shippingOption>
                    <shippingOption code="itemCustoms">
                        <label>Customs Data</label>
                        <routes>
                            <route>
                                <excludeDestinations>
                                    <destination>domestic</destination>
                                </excludeDestinations>
                            </route>
                        </routes>
                        <inputs>
                            <input code="customsValue">
                                <sortOrder>10</sortOrder>
                                <label>Customs Value</label>
                                <inputType>prefixed</inputType>
                                <validationRules>
                                    <rule name="validate-number"/>
                                </validationRules>
                            </input>
                            <input code="hsCode">
                                <sortOrder>20</sortOrder>
                                <label>HS Code</label>
                                <inputType>text</inputType>
                            </input>
                            <input code="countryOfOrigin">
                                <sortOrder>30</sortOrder>
                                <label>Country of Origin</label>
                                <inputType>select</inputType>
                            </input>
                            <input code="exportDescription">
                                <sortOrder>1000</sortOrder>
                                <label>Export Description</label>
                                <inputType>textarea</inputType>
                            </input>
                        </inputs>
                    </shippingOption>
                </shippingOptions>
            </itemShippingOptions>
        </itemOptions>
        <compatibilityData>
            <rule id="contentTypeDependency">
                <masters>
                    <master>packageCustoms.contentType</master>
                </masters>
                <triggerValue>OTHER</triggerValue>
                <action>show</action>
                <subjects>
                    <subject>packageCustoms.explanation</subject>
                </subjects>
            </rule>
        </compatibilityData>
    </carrier>
</carriers>

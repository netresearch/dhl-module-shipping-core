<?xml version="1.0" ?>
<carriers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Dhl_ShippingCore/etc/shipping_options.xsd">
    <carrier code="base">
        <packageOptions>
            <shippingOption code="packageWeight">
                <label>Package Details</label>
                <inputs>
                    <input code="weight">
                        <label>Total Weight</label>
                        <inputType>number</inputType>
                    </input>
                    <input code="weightUnit">
                        <label>Weight Unit</label>
                        <inputType>static</inputType>
                        <disabled>true</disabled>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption code="packageSize">
                <label>Package Size</label>
                <inputs>
                    <input code="width">
                        <label>Width</label>
                        <inputType>number</inputType>
                    </input>
                    <input code="height">
                        <label>Height</label>
                        <inputType>number</inputType>
                    </input>
                    <input code="length">
                        <label>Length</label>
                        <inputType>number</inputType>
                    </input>
                    <input code="sizeUnit">
                        <label>Size Unit</label>
                        <inputType>static</inputType>
                        <disabled>true</disabled>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption code="packageCustoms">
                <label>Customs Data</label>
                <inputs>
                    <input code="customsValue">
                        <label>Customs Value</label>
                        <inputType>price</inputType>
                    </input>
                    <input code="exportDescription">
                        <label>Package Description</label>
                        <inputType>textarea</inputType>
                    </input>
                    <input code="termsOfTrade" defaultConfigValue="dhlshippingsolutions/dhlglobalwebservices/shipment_defaults/terms_of_trade">
                        <label>Terms of Trade</label>
                        <inputType>select</inputType>
                    </input>
                    <input code="contentType" defaultConfigValue="dhlshippingsolutions/dhlglobalwebservices/shipment_defaults/export_content_type">
                        <label>Export Content Type</label>
                        <inputType>select</inputType>
                    </input>
                    <input code="explanation" defaultConfigValue="dhlshippingsolutions/dhlglobalwebservices/shipment_defaults/export_content_explanation">
                        <label>Export Content Explanation</label>
                        <inputType>text</inputType>
                    </input>
                </inputs>
            </shippingOption>
        </packageOptions>
        <itemOptions>
            <itemShippingOptions itemId="0">
                <shippingOptions>
                    <shippingOption code="details">
                        <label>Item Details</label>
                        <inputs>
                            <input code="productId">
                                <inputType>hidden</inputType>
                            </input>
                            <input code="productName">
                                <label>Product Name</label>
                                <inputType>static</inputType>
                                <disabled>true</disabled>
                            </input>
                            <input code="price">
                                <inputType>hidden</inputType>
                            </input>
                            <input code="weight">
                                <label>Weight</label>
                                <inputType>number</inputType>
                            </input>
                            <input code="qtyToShip">
                                <label>Quantity to Ship</label>
                                <inputType>static</inputType>
                                <disabled>true</disabled>
                            </input>
                            <input code="qty">
                                <label>Quantity</label>
                                <inputType>number</inputType>
                            </input>
                        </inputs>
                    </shippingOption>
                    <shippingOption code="itemCustoms">
                        <label>Customs Data</label>
                        <inputs>
                            <input code="hsCode">
                                <sortOrder>10</sortOrder>
                                <label>HS Code</label>
                                <inputType>text</inputType>
                            </input>
                            <input code="exportDescription">
                                <sortOrder>20</sortOrder>
                                <label>Export Description</label>
                                <inputType>textarea</inputType>
                            </input>
                            <input code="customsValue">
                                <sortOrder>30</sortOrder>
                                <label>Customs Value</label>
                                <inputType>price</inputType>
                            </input>
                            <input code="countryOfOrigin">
                                <sortOrder>40</sortOrder>
                                <label>Country of Origin</label>
                                <inputType>select</inputType>
                            </input>
                        </inputs>
                    </shippingOption>
                </shippingOptions>
            </itemShippingOptions>
        </itemOptions>
    </carrier>
</carriers>

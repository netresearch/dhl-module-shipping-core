<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="dhlshippingsolutions" type="text" sortOrder="500" showInDefault="1" showInStore="1" showInWebsite="1" translate="label">
            <label>DHL Shipping Solutions</label>
            <tab>sales</tab>
            <resource>Magento_Shipping::config_shipping</resource>

            <group id="dhlglobalwebservices" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="100" translate="label">
                <label>General Configuration</label>

                <field id="shippingCoreInfoBox" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
                    <frontend_model>Netresearch\ConfigFields\Block\InfoBox</frontend_model>
                    <attribute type="body_template">Dhl_ShippingCore::system/config/infoBoxBody.phtml</attribute>
                    <attribute type="header_template">Dhl_ShippingCore::system/config/infoBoxHeader.phtml</attribute>
                    <attribute type="view_model">Dhl\ShippingCore\ViewModel\Adminhtml\System\InfoBox</attribute>
                    <attribute type="logo">Dhl_Ui::images/logo-dhl-wide.svg</attribute>
                    <attribute type="css_class">dhlgw</attribute>
                </field>

                <!-- Cash On Delivery Payment Methods -->
                <field id="cod_methods" sortOrder="210" showInDefault="1" showInWebsite="0" showInStore="0"
                       translate="label comment" type="multiselect">
                    <label>Cash On Delivery Payment Methods</label>
                    <comment>Selected payment methods will be treated as CoD methods during shipment order creation.</comment>
                    <source_model>Dhl\ShippingCore\Model\Config\Source\AllPaymentMethods</source_model>
                    <frontend_class>w-75</frontend_class>
                </field>

                <!-- Cut-off Time -->
                <field id="cut_off_time" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="220"
                       translate="label comment" type="time">
                    <label>Order Cut-off Time</label>
                    <comment>All orders that are placed after the configured time are assumed to be handed over to the respective carrier on the next business day. All orders that are placed before that time are expected to be handed over to the respective carrier on the same day.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Date\Short</source_model>
                </field>

                <field id="package_dimension" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="240"
                       translate="label comment" type="select">
                    <label>My Own Packages</label>
                    <comment>Use this to create your own types of packages with your specific titles, sizes and weights.</comment>
                    <frontend_model>Dhl\ShippingCore\Block\Adminhtml\System\Config\Form\Field\Package</frontend_model>
                    <backend_model>Dhl\ShippingCore\Model\Config\Backend\Packages</backend_model>
                </field>

                <include path="Dhl_ShippingCore::system/600_shipment_defaults.xml"/>
                <include path="Dhl_ShippingCore::system/700_bulk_settings.xml"/>
            </group>
        </section>
    </system>
</config>

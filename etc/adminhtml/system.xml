<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="shipping" showInDefault="1" showInStore="1" showInWebsite="1" translate="label">
            <group id="dhlglobalwebservices" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="200" translate="label">
                <label>DHL Global Webservices configuration</label>
                <!-- Cash On Delivery Payment Methods -->
                <field id="cod_methods" translate="label tooltip" type="multiselect" sortOrder="210" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Cash On Delivery Payment Methods</label>
                    <comment>Selected payment methods will be treated as CoD methods during shipment order creation.</comment>
                    <source_model>Dhl\ShippingCore\Model\Config\Source\AllPaymentMethods</source_model>
                    <tooltip>Select delivery payment methods.</tooltip>
                </field>
                <!-- Cut-off Time -->
                <field id="cut_off_time" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="220"
                       translate="label" type="time">
                    <label>Cut-off Time</label>
                    <source_model>Magento\Config\Model\Config\Source\Date\Short</source_model>
                    <tooltip>Enter the cut-off time time.</tooltip>
                </field>
                <!-- Terms of trade -->
                <field id="terms_of_trade" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="230" translate="label" type="select">
                    <label>Terms of trade</label>
                    <source_model>Dhl\ShippingCore\Model\Config\Source\TermsOfTrade</source_model>
                    <tooltip>Select the terms of trade.</tooltip>
                </field>
            </group>
        </section>
    </system>
</config>

<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/dhl/get-checkout-data" method="POST">
        <service class="Dhl\ShippingCore\Api\Rest\CheckoutDataManagementInterface" method="getData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/carts/mine/dhl/services/set-selection" method="POST">
        <service class="Dhl\ShippingCore\Api\Rest\CheckoutDataManagementInterface" method="updateServiceSelection"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <route url="/V1/guest-carts/:cartId/dhl/services/set-selection" method="POST">
        <service class="Dhl\ShippingCore\Api\Rest\GuestCheckoutDataManagementInterface" method="updateServiceSelection"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>

<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/dhl/checkout-data/get" method="POST">
        <service class="Dhl\ShippingCore\Api\ShippingSettings\CheckoutManagementInterface" method="getCheckoutData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/carts/mine/dhl/shipping-option/selection/update" method="POST">
        <service class="Dhl\ShippingCore\Api\ShippingSettings\CheckoutManagementInterface" method="updateShippingOptionSelections"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <route url="/V1/guest-carts/:cartId/dhl/shipping-option/selection/update" method="POST">
        <service class="Dhl\ShippingCore\Api\ShippingSettings\GuestCheckoutManagementInterface" method="updateShippingOptionSelections"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/dhl/delivery-locations/:carrierCode/search" method="POST">
        <service class="Dhl\ShippingCore\Api\DeliveryLocationProviderInterface" method="search"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>

<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <!-- Shipping origin -->
    <section name="AdminSystemConfigShippingOriginSection">
        <element name="shippingOriginGroup" type="button" selector="#shipping_origin-head"/>
        <element name="shippingOriginGroupExpanded" type="button" selector="#shipping_origin-head:not(.open)"/>

        <element name="shippingOriginCountryIdInherit" type="checkbox" selector="#shipping_origin_country_id_inherit"/>
        <element name="shippingOriginRegionIdInherit" type="checkbox" selector="#shipping_origin_region_id_inherit"/>
        <element name="shippingOriginPostalCodeInherit" type="checkbox" selector="#shipping_origin_postcode_inherit"/>

        <element name="shippingOriginCountryId" type="select" selector="[data-ui-id='select-groups-origin-fields-country-id-value']"/>
        <!-- The region input is either a select or and input field, depending on the selected country -->
        <element name="shippingOriginRegionId" type="select" selector="#shipping_origin_region_id"/>
        <element name="shippingOriginRegionInputId" type="input" selector="#shipping_origin_region_id"/>
        <element name="shippingOriginPostalCode" type="input" selector="[data-ui-id='text-groups-origin-fields-postcode-value']"/>
        <element name="shippingOriginCity" type="input" selector="[data-ui-id='text-groups-origin-fields-city-value']"/>
        <element name="shippingOriginStreet1" type="input" selector="[data-ui-id='text-groups-origin-fields-street-line1-value']"/>
    </section>

    <!-- DHLGW -->
    <section name="AdminSystemConfigShippingCoreSection">
        <element name="shippingCoreGroup" type="button" selector="#dhlshippingsolutions_dhlglobalwebservices-head"/>
        <element name="shippingCoreGroupExpanded" type="button" selector="#dhlshippingsolutions_dhlglobalwebservices-head:not(.open)"/>
        <element name="codPaymentMethodSelection" type="multiselect"
                 selector="[data-ui-id='select-groups-dhlglobalwebservices-fields-cod-methods-value']"/>
        <element name="codPaymentMethodActiveSelection" type="multiselect"
                 selector="[data-ui-id='select-groups-dhlglobalwebservices-fields-cod-methods-value'] option[selected=selected]"/>

        <element name="cutOffTimeConfigGroup" type="text" selector="#row_dhlshippingsolutions_dhlglobalwebservices_cut_off_time"/>
        <element name="cutOffTimeConfigGroupHoursSelect" type="select"
                 selector="[data-ui-id='time-groups-dhlglobalwebservices-fields-cut-off-time-value-hour']"/>
        <element name="cutOffTimeConfigGroupMinutesSelect" type="select"
                 selector="[data-ui-id='time-groups-dhlglobalwebservices-fields-cut-off-time-value-minute']"/>
        <element name="cutOffTimeConfigGroupSecondsSelect" type="select"
                 selector="[data-ui-id='time-groups-dhlglobalwebservices-fields-cut-off-time-value-second']"/>

        <element name="termsOfTradeConfigGroup" type="text" selector="#row_dhlshippingsolutions_dhlglobalwebservices_shipment_defaults_terms_of_trade"/>
        <element name="termsOfTradeConfigGroupOptionDDU" type="radio" selector="#dhlshippingsolutions_dhlglobalwebservices_shipment_defaults_terms_of_tradeDDU"/>
        <element name="termsOfTradeConfigGroupOptionDDP" type="radio" selector="#dhlshippingsolutions_dhlglobalwebservices_shipment_defaults_terms_of_tradeDDP"/>

        <element name="termsOfTradeConfigGroupOptionDDULabel" type="text" selector="#dhlshippingsolutions_dhlglobalwebservices_shipment_defaults_terms_of_tradeDDU + label"/>
        <element name="termsOfTradeConfigGroupOptionDDPLabel" type="text" selector="#dhlshippingsolutions_dhlglobalwebservices_shipment_defaults_terms_of_tradeDDP + label"/>
    </section>
</sections>

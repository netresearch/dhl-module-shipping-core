<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <!-- Navigate to the shipping origin configuration page -->
    <actionGroup name="NavigateToShippingOriginSectionActionGroup"
                 extends="ScrollToAndExpandGroupActionGroup"
                 insertBefore="seeElementGroupName"
    >
        <arguments>
            <argument name="groupName" defaultValue="AdminSystemConfigShippingOriginSection.shippingOriginGroup"/>
            <argument name="groupNameExpanded" defaultValue="AdminSystemConfigShippingOriginSection.shippingOriginGroupExpanded"/>
        </arguments>

        <amOnPage url="{{AdminSystemConfigShippingSectionPage.url}}" stepKey="navigateToShippingSettingsConfigPage"/>
        <waitForPageLoad stepKey="waitForShippingSettingsConfigPageLoad"/>
    </actionGroup>

    <!-- Set shipping origin address (default: DE)

         Region is sometimes a select and sometimes a input field, so use either the
         actionGroup "ConfigureShippingOriginRegionSelectActionGroup" or "ConfigureShippingOriginRegionInputActionGroup"
    -->
    <actionGroup name="ConfigureShippingOriginActionGroup">
        <arguments>
            <argument name="ShippingOriginData" defaultValue="ShippingOrigin_DE"/>
        </arguments>

        <!-- Uncheck inherited options -->
        <uncheckOption selector="{{AdminSystemConfigShippingOriginSection.shippingOriginCountryIdInherit}}"
                       stepKey="uncheckInheritedShippingOriginCountryId"/>
        <uncheckOption selector="{{AdminSystemConfigShippingOriginSection.shippingOriginRegionIdInherit}}"
                       stepKey="uncheckInheritedShippingOriginRegionId"/>
        <uncheckOption selector="{{AdminSystemConfigShippingOriginSection.shippingOriginPostalCodeInherit}}"
                       stepKey="uncheckInheritedShippingOriginPostalCode"/>

        <!-- Configure shipping origin address -->
        <selectOption selector="{{AdminSystemConfigShippingOriginSection.shippingOriginCountryId}}"
                      userInput="{{ShippingOriginData.countryId}}"
                      stepKey="selectShippingOriginCountryId"/>
        <waitForLoadingMaskToDisappear stepKey="waitForCountrySelectUpdate"/>

        <fillField selector="{{AdminSystemConfigShippingOriginSection.shippingOriginPostalCode}}"
                   userInput="{{ShippingOriginData.postalCode}}"
                   stepKey="fillShippingOriginPostalCode"/>
        <fillField selector="{{AdminSystemConfigShippingOriginSection.shippingOriginCity}}"
                   userInput="{{ShippingOriginData.city}}"
                   stepKey="fillShippingOriginCity"/>
        <fillField selector="{{AdminSystemConfigShippingOriginSection.shippingOriginStreet1}}"
                   userInput="{{ShippingOriginData.street1}}"
                   stepKey="fillShippingOriginStreet1"/>
    </actionGroup>

    <!-- Set shipping origin address with region selection -->
    <actionGroup name="ConfigureShippingOriginRegionSelectActionGroup" extends="ConfigureShippingOriginActionGroup">
        <selectOption selector="{{AdminSystemConfigShippingOriginSection.shippingOriginRegionId}}"
                      userInput="{{ShippingOriginData.regionId}}"
                      stepKey="selectShippingOriginRegionId"
                      before="fillShippingOriginPostalCode"/>
    </actionGroup>

    <!-- Set shipping origin address with region input -->
    <actionGroup name="ConfigureShippingOriginRegionInputActionGroup" extends="ConfigureShippingOriginActionGroup">
        <fillField selector="{{AdminSystemConfigShippingOriginSection.shippingOriginRegionInputId}}"
                   userInput="{{ShippingOriginData.regionId}}"
                   stepKey="fillShippingOriginRegionInputId"
                   before="fillShippingOriginPostalCode"/>
    </actionGroup>

    <!-- Navigate to the DHLGW configuration page -->
    <actionGroup name="NavigateToShippingCoreSectionActionGroup">
        <amOnPage url="{{AdminSystemConfigShippingSolutionSectionPage.url}}" stepKey="navigateToShippingSettingsConfigPage"/>
        <waitForPageLoad stepKey="waitForShippingSettingsConfigPageLoad"/>
    </actionGroup>
</actionGroups>

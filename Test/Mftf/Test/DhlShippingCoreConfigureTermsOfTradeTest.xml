<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="DhlShippingCoreConfigureTermsOfTradeTest">
        <annotations>
            <features value="Configuration"/>
            <stories value="Terms of trade configuration"/>
            <title value="Terms of trade configuration"/>
            <description value="Verify that terms of trade can be configured"/>
            <severity value="CRITICAL"/>
            <group value="dhlgw-configuration"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="NavigateToShippingSolutionsSectionActionGroup" stepKey="navigateToShippingSettingsConfigInTest"/>
            <actionGroup ref="ScrollToAndExpandConfigActionGroup" stepKey="navigateToShippingCoreGroup">
                <argument name="groupName" value="{{AdminSystemConfigShippingSolutionsSection.shippingCoreGroup}}"/>
                <argument name="groupNameExpanded" value="{{AdminSystemConfigShippingSolutionsSection.shippingCoreGroupExpanded}}"/>
            </actionGroup>
        </before>
        <after>
            <createData entity="ShippingCoreConfigDefault" stepKey="resetConfiguration"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <comment userInput="-> Perform actual test" stepKey="runTestComment"/>

        <!-- Scroll to subgroup and expand it -->
        <actionGroup ref="ScrollToAndExpandConfigActionGroup" stepKey="navigateToShipmentDefaultsGroup">
            <argument name="groupName" value="{{AdminSystemConfigShippingSolutionsSection.shipmentDefaultsGroup}}"/>
            <argument name="groupNameExpanded" value="{{AdminSystemConfigShippingSolutionsSection.shipmentDefaultsGroupExpanded}}"/>
        </actionGroup>

        <!-- Configure a terms of trade and save -->
        <seeElement selector="{{AdminSystemConfigShippingSolutionsSection.termsOfTradeConfigGroup}}" stepKey="seeTermsOfTradeConfigGroup"/>
        <scrollTo selector="{{AdminSystemConfigShippingSolutionsSection.termsOfTradeConfigGroup}}" stepKey="scrollToTermsOfTradeConfigGroup" x="0" y="-85"/>

        <see selector="{{AdminSystemConfigShippingSolutionsSection.termsOfTradeConfigGroupOptionDDULabel}}"
             userInput="{{ShippingCoreTermsOfTrade.DDU}}" stepKey="seeTermsOfTradeConfigGroupLabelDDU"/>
        <see selector="{{AdminSystemConfigShippingSolutionsSection.termsOfTradeConfigGroupOptionDDPLabel}}"
             userInput="{{ShippingCoreTermsOfTrade.DDP}}" stepKey="seeTermsOfTradeConfigGroupLabelDDP"/>

        <seeCheckboxIsChecked selector="{{AdminSystemConfigShippingSolutionsSection.termsOfTradeConfigGroupOptionDDU}}"
                              stepKey="termsOfTradeConfigGroupOptionCheckedDDU"/>

        <click selector="{{AdminSystemConfigShippingSolutionsSection.termsOfTradeConfigGroupOptionDDPLabel}}"
               stepKey="termsOfTradeConfigGroupOptionClickDDP"/>

        <actionGroup ref="AdminSystemConfigSectionSaveActionGroup" stepKey="saveAdminConfigSection"/>

        <!-- Confirm selection is persisted -->

        <actionGroup ref="ScrollToAndExpandConfigActionGroup" stepKey="navigateToShippingCoreGroupAfterSave">
            <argument name="groupName" value="{{AdminSystemConfigShippingSolutionsSection.shippingCoreGroup}}"/>
            <argument name="groupNameExpanded" value="{{AdminSystemConfigShippingSolutionsSection.shippingCoreGroupExpanded}}"/>
        </actionGroup>

        <actionGroup ref="ScrollToAndExpandConfigActionGroup" stepKey="navigateToShipmentDefaultsGroupAfterSave">
            <argument name="groupName" value="{{AdminSystemConfigShippingSolutionsSection.shipmentDefaultsGroup}}"/>
            <argument name="groupNameExpanded" value="{{AdminSystemConfigShippingSolutionsSection.shipmentDefaultsGroupExpanded}}"/>
        </actionGroup>

        <scrollTo selector="{{AdminSystemConfigShippingSolutionsSection.termsOfTradeConfigGroup}}" stepKey="scrollToTermsOfTradeConfigGroupAfterSave" x="0" y="-85"/>
        <seeCheckboxIsChecked selector="{{AdminSystemConfigShippingSolutionsSection.termsOfTradeConfigGroupOptionDDP}}"
                              stepKey="termsOfTradeConfigGroupOptionCheckedDDP"/>
        <dontSeeCheckboxIsChecked selector="{{AdminSystemConfigShippingSolutionsSection.termsOfTradeConfigGroupOptionDDU}}"
                                  stepKey="termsOfTradeConfigGroupOptionNotCheckedDDU"/>
    </test>
</tests>

<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="DhlShippingCoreConfigureCodMethods">
        <annotations>
            <features value="Configuration"/>
            <stories value="CoD Payment method configuration"/>
            <title value="CoD Payment method configuration"/>
            <description value="Verify that cash on delivery payment methods can be configured"/>
            <severity value="CRITICAL"/>
            <group value="dhlgw-configuration"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>

        <actionGroup ref="NavigateToShippingCoreSectionActionGroup" stepKey="navigateToShippingSettingsConfigInTest"/>

        <!-- Select payment methods and save -->
        <selectOption selector="{{AdminSystemConfigShippingCoreSection.codPaymentMethodSelection}}"
                      parameterArray="[{{ShippingCorePaymentMethods.cashOnDelivery}}, {{ShippingCorePaymentMethods.checkMoneyOrder}}]"
                      stepKey="selectCodPaymentMethods"/>

        <actionGroup ref="SaveAdminSystemConfigSectionActionGroup" stepKey="saveAdminConfigSection"/>

        <!-- Confirm selection is persisted -->
        <grabMultiple stepKey="fetchPaymentMethods" selector="{{AdminSystemConfigShippingCoreSection.codPaymentMethodActiveSelection}}"/>
        <assertCount stepKey="validateSavedPaymentMethodsCount">
            <expectedResult type="const">2</expectedResult>
            <actualResult type="variable">fetchPaymentMethods</actualResult>
        </assertCount>
        <assertContains stepKey="validateSavedPaymentMethodsA">
            <expectedResult type="string">{{ShippingCorePaymentMethods.checkMoneyOrder}}</expectedResult>
            <actualResult type="variable">fetchPaymentMethods</actualResult>
        </assertContains>
        <assertContains stepKey="validateSavedPaymentMethodsB">
            <expectedResult type="string">{{ShippingCorePaymentMethods.cashOnDelivery}}</expectedResult>
            <actualResult type="variable">fetchPaymentMethods</actualResult>
        </assertContains>
    </test>

    <test name="DhlShippingCoreConfigureCutOffTime">
        <annotations>
            <features value="Configuration"/>
            <stories value="Cut-off time configuration"/>
            <title value="Cut-off time configuration"/>
            <description value="Verify that cut-off time can be configured"/>
            <severity value="CRITICAL"/>
            <group value="dhlgw-configuration"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>

        <actionGroup ref="NavigateToShippingCoreSectionActionGroup" stepKey="navigateToShippingSettingsConfigInTest"/>

        <!-- Configure a cut-off time and save -->
        <seeElement selector="{{AdminSystemConfigShippingCoreSection.cutOffTimeConfigGroup}}" stepKey="seeCutOffTimeConfigGroup"/>

        <selectOption selector="{{AdminSystemConfigShippingCoreSection.cutOffTimeConfigGroupHoursSelect}}"
                      userInput="{{ShippingCoreCutOffTime.hours}}"
                      stepKey="selectCutOffTimeHour"/>
        <selectOption selector="{{AdminSystemConfigShippingCoreSection.cutOffTimeConfigGroupMinutesSelect}}"
                      userInput="{{ShippingCoreCutOffTime.minutes}}"
                      stepKey="selectCutOffTimeMinute"/>
        <selectOption selector="{{AdminSystemConfigShippingCoreSection.cutOffTimeConfigGroupSecondsSelect}}"
                      userInput="{{ShippingCoreCutOffTime.seconds}}"
                      stepKey="selectCutOffTimeSecond"/>

        <actionGroup ref="SaveAdminSystemConfigSectionActionGroup" stepKey="saveAdminConfigSection"/>

        <!-- Confirm selection is persisted -->
        <seeOptionIsSelected selector="{{AdminSystemConfigShippingCoreSection.cutOffTimeConfigGroupHoursSelect}}"
                             userInput="{{ShippingCoreCutOffTime.hours}}"
                             stepKey="validateCutOffTimeConfigGroupHoursSelect"/>
        <seeOptionIsSelected selector="{{AdminSystemConfigShippingCoreSection.cutOffTimeConfigGroupMinutesSelect}}"
                             userInput="{{ShippingCoreCutOffTime.minutes}}"
                             stepKey="validateCutOffTimeConfigGroupMinutesSelect"/>
        <seeOptionIsSelected selector="{{AdminSystemConfigShippingCoreSection.cutOffTimeConfigGroupSecondsSelect}}"
                             userInput="{{ShippingCoreCutOffTime.seconds}}"
                             stepKey="validateCutOffTimeConfigGroupSecondsSelect"/>
    </test>

    <test name="DhlShippingCoreConfigureTermsOfTrade">
        <annotations>
            <features value="Configuration"/>
            <stories value="Terms of trade configuration"/>
            <title value="Terms of trade configuration"/>
            <description value="Verify that terms of trade can be configured"/>
            <severity value="CRITICAL"/>
            <group value="dhlgw-configuration"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>

        <actionGroup ref="NavigateToShippingCoreSectionActionGroup" stepKey="navigateToShippingSettingsConfigInTest"/>

        <!-- Configure a terms of trade and save -->
        <seeElement selector="{{AdminSystemConfigShippingCoreSection.termsOfTradeConfigGroup}}" stepKey="seeTermsOfTradeConfigGroup"/>

        <see selector="{{AdminSystemConfigShippingCoreSection.termsOfTradeConfigGroupOptionDDULabel}}"
             userInput="{{ShippingCoreTermsOfTrade.DDU}}" stepKey="seeTermsOfTradeConfigGroupLabelDDU"/>
        <see selector="{{AdminSystemConfigShippingCoreSection.termsOfTradeConfigGroupOptionDDPLabel}}"
             userInput="{{ShippingCoreTermsOfTrade.DDP}}" stepKey="seeTermsOfTradeConfigGroupLabelDDP"/>

        <seeCheckboxIsChecked selector="{{AdminSystemConfigShippingCoreSection.termsOfTradeConfigGroupOptionDDU}}"
                              stepKey="termsOfTradeConfigGroupOptionCheckedDDU"/>

        <click selector="{{AdminSystemConfigShippingCoreSection.termsOfTradeConfigGroupOptionDDPLabel}}"
               stepKey="termsOfTradeConfigGroupOptionClickDDP"/>

        <actionGroup ref="SaveAdminSystemConfigSectionActionGroup" stepKey="saveAdminConfigSection"/>

        <!-- Confirm selection is persisted -->
        <seeCheckboxIsChecked selector="{{AdminSystemConfigShippingCoreSection.termsOfTradeConfigGroupOptionDDP}}"
                              stepKey="termsOfTradeConfigGroupOptionCheckedDDP"/>
        <dontSeeCheckboxIsChecked selector="{{AdminSystemConfigShippingCoreSection.termsOfTradeConfigGroupOptionDDU}}"
                                  stepKey="termsOfTradeConfigGroupOptionNotCheckedDDU"/>
    </test>
</tests>
